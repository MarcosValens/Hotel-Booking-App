@model IEnumerable<HotelApp.Models.HotelModel>

@{
    ViewData["Title"] = "Hotels";
}

<h1>Hotels</h1>

<a asp-action="Create" class="btn btn-primary">New Hotel</a>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Address</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hotel in Model)
        {
            <tr>
                <td>@hotel.Id</td>
                <td>@hotel.Name</td>
                <td>@hotel.Address</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@hotel.Id" class="btn btn-sm btn-secondary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
